<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerChooseThreeLabel"
    style="@style/LinearLayoutVerticalBasic"
    android:paddingTop="@dimen/d20dp">

    <RelativeLayout style="@style/RelativeLayoutBasic">

        <LinearLayout
            android:id="@+id/lyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/civAvatar"
                android:layout_width="@dimen/d45dp"
                android:layout_height="@dimen/d45dp"
                android:layout_marginEnd="@dimen/d10dp"
                android:background="@drawable/ic_product_default" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyLabel"
            style="@style/LinearLayoutVerticalBasic"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/lyIcon">

            <TextView
                android:id="@+id/tvFirstLabelChoose"
                style="@style/TextRobotoRegularBasic"
                android:layout_height="@dimen/d22dp"
                android:gravity="center_vertical"
                android:text="Help 400SC 250ml"
                android:textSize="@dimen/d17sp" />

            <TextView
                android:id="@+id/tvSecondLabelChoose"
                style="@style/TextRobotoRegularBasic"
                android:layout_height="@dimen/d22dp"
                android:gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:text="18.000đ / Gói"
                android:textColor="@color/d7A7F83"
                android:textSize="@dimen/d15sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1dp"
        android:layout_marginTop="@dimen/d20dp"
        android:background="@color/dF2F2F2" />
</LinearLayout>
