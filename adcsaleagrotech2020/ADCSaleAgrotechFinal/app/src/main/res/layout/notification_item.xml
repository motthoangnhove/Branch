<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyContainerNotification"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:paddingLeft="@dimen/d18dp"
    android:paddingRight="@dimen/d18dp"
    android:orientation="vertical"
    android:background="@color/dFFFFFF">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/d80dp"
    android:baselineAligned="false"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="@dimen/d36dp"
            android:layout_height="@dimen/d36dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/d36dp"
                android:layout_height="@dimen/d36dp"
                android:src="@drawable/ic_notification"
                tools:ignore="VectorDrawableCompat" />
            <View
                android:id="@+id/vMainStatusNotificationDot"
                android:layout_width="@dimen/d10dp"
                android:layout_height="@dimen/d10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_main_status_notification_dot"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/d10dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="9"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvTitleNotification"
                    style="@style/TextRobotoRegularBasic"
                    android:text="Lịch nghĩ tết 2020"
                    android:textColor="@color/d313E54"
                    android:textSize="@dimen/d15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvDescriptionNotification"
                        style="@style/TextRobotoRegularBasic"
                        android:textSize="@dimen/d16sp"
                        android:text="Phòng nhân sự xin thông báo nghỉ tết từ ngày 23/01"
                        android:textColor="@color/d7A7F83"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1dp"
        android:background="@color/dF2F2F2"/>
</LinearLayout>