<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/d00A850</item>
    </style>

    <style name="dialog_full_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/d37353D</item>
        <item name="colorPrimaryDark">@color/dFFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">@color/d00A850</item>
    </style>

    <style name="DatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="colorAccent">@color/d00A850</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:gravity">end</item>
        <item name="android:textColorSecondary">@color/d00A850</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@drawable/border_radius_view_white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerPositiveButtonStyle
        </item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerNegativeButtonStyle
        </item>
        <item name="android:windowMinWidthMajor">@dimen/abc_dialog_fixed_height_major</item>
        <item name="android:windowMinWidthMinor">@dimen/abc_dialog_fixed_height_major</item>
    </style>

    <style name="DatePickerPositiveButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/d16sp</item>
        <item name="android:textColor">@color/d00A850</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="DatePickerNegativeButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/d16sp</item>
        <item name="android:textColor">@color/d7A7F83</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="popup_window_animation_phone">
        <item name="android:windowEnterAnimation">@anim/anim_right_to_left</item>
        <item name="android:windowExitAnimation">@anim/anim_left_to_right</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_down</item>
    </style>

    <style name="iconStatusItemTypeCreateRowCrop" parent="android:Widget.TextView">
        <item name="android:layout_width">@dimen/d24dp</item>
        <item name="android:layout_height">@dimen/d24dp</item>
        <item name="android:background">@drawable/ic_warm_input</item>
    </style>

    <style name="hintTextColor" parent="android:Widget.EditText">
        <item name="android:textColorHint">@color/dF1F0F5</item>
    </style>

    <style name="largerCalendarText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/d15dp</item>
    </style>

    <style name="fontRobotoLight">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="fontRobotoRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="fontRobotoMedium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="fontRobotoBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="iconMenuItemLeft" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="labelMenuItemLeft" parent="android:Widget.TextView">
        <item name="android:layout_marginLeft">@dimen/d10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/d15sp</item>
        <item name="android:textColor">@color/d000000</item>
    </style>
    <!--    basic style-->
    <style name="LinearLayoutVerticalCenter">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinearLayoutVerticalBasic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutHorizontalBasic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearLayoutHorizontalCenter">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FrameLayoutBasic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextRobotoLightBasic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/d18sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/d7A7F83</item>
    </style>

    <style name="TextRobotoRegularBasic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/d18sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/d383F45</item>
    </style>

    <style name="TextRobotoMediumBasic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/d18sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/d383F45</item>
    </style>

    <style name="TextTitleBasic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/d20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/d383F45</item>
    </style>

    <style name="ButtonBasic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/d17sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/dFFFFFF</item>
        <item name="android:background">@drawable/bg_button_action</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAvatarName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/d17sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/dFFFFFF</item>
    </style>
    <!--Style button menu more-->
    <style name="ButtonMenuMore">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/d18sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/d383F45</item>
        <item name="android:background">@drawable/bg_menu_more_button_action</item>
        <item name="android:drawablePadding">@dimen/d10dp</item>
        <item name="android:paddingStart">@dimen/d18dp</item>
        <item name="android:paddingEnd">@dimen/d40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ImageBasic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageButtonBasic">
        <item name="android:layout_height">@dimen/d40dp</item>
        <item name="android:layout_width">@dimen/d40dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="srcCompat">@drawable/ic_back</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="RelativeLayoutBasic">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextTitleHeaderCenter">
        <item name="android:layout_height">@dimen/d70dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/d20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/d000000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextRobotoBoldTitleHeaderRight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/d16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/d383F45</item>

    </style>

    <style name="rowChooseDialog">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/d18dp</item>
        <item name="android:paddingTop">@dimen/d14dp</item>
        <item name="android:paddingBottom">@dimen/d14dp</item>
    </style>

    <!--    dialog debt info-->
    <style name="RelativeLayoutDebtInfo">
        <item name="android:layout_marginTop">@dimen/d25dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextDebtInfoLeft">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/d18sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/d383F45</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <!--    layout tab receivable-->
    <style name="TextButtonTabReceivable">
        <item name="android:layout_height">@dimen/d36dp</item>
        <item name="android:layout_width">@dimen/d96dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/d18sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/d7A7F83</item>
        <item name="android:layout_gravity">center</item>
        <item name="background">@drawable/bg_button_tab_receivable</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FrameLayoutButtonTabReceivable">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SizeDefaultDialogChoose">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">@dimen/d416dp</item>
        <item name="android:minWidth">@dimen/d335dp</item>
        <item name="android:paddingTop">@dimen/d20dp</item>
        <item name="android:paddingBottom">@dimen/d20dp</item>
        <item name="android:paddingRight">@dimen/d18dp</item>
        <item name="android:paddingLeft">@dimen/d18dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tabDebtCustomerItem" parent="android:Widget.TextView">
        <item name="android:layout_width">@dimen/d96dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/d18sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
